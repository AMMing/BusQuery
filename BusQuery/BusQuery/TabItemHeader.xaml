<UserControl x:Class="BusQuery.TabItemHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="userControlTabItemHeader"
             mc:Ignorable="d" 
             Height="24"
             MouseDown="userControlTabItemHeader_MouseDown">
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="txt" Text="text" Margin="10,0,0,0" Style="{StaticResource MetroTopTitle}" />
        <TextBlock x:Name="txt2" Text="text" FontSize="12" VerticalAlignment="Bottom" Margin="2,0,0,0" Style="{StaticResource MetroTopTitle}" />
        <Button FontSize="12"  Background="{x:Null}" BorderBrush="{x:Null}"  Click="Button_Click" Style="{DynamicResource NullButtonStyle}" Width="15"  Height="20" VerticalAlignment="Top" Margin="0,-5,0,0">
            <TextBlock Text="x" Margin="0" FontSize="16" Style="{StaticResource MetroTopTitle}" />
        </Button>
    </StackPanel>
</UserControl>
