<Window x:Class="BusQuery.Window_BusStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window_BusStatus" Height="600" Width="400" WindowStartupLocation="CenterScreen" Icon="images/app.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txt" Margin="5"></TextBlock>
        <ListBox x:Name="listbox" Margin="5" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" ></ListBox>
    </Grid>
</Window>
